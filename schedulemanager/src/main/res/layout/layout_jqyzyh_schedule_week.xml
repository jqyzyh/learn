        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_day_6"
        style="@style/ScheduleTextDay"
        android:text="6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_day_7"
        style="@style/ScheduleTextDay"
        android:text="17" />
