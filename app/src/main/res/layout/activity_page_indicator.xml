<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PageIndicatorActivity"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jqyzyh.iee.cusomwidget.indicator.ColorIndicator
        android:id="@+id/indicator"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:background="#eee"
        app:NormalColor="#0f0"
        app:IndicatorColor="#f00"
        app:NormalTypeface="normal"
        app:IndicatorTypeface="bold"
        app:IndicatorTextSize="18dp"
        app:NormalTextSize="14dp"
        android:layout_height="40dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>