<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/base_backgour"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="schedule"
            android:text="schedule" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="camera"
            android:text="camera" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="webview"
            android:text="webview" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="test"
            android:text="test" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="wheel"
            android:text="滚筒" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="inputFilter"
            android:text="InputFilter" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playsound"
            android:text="playsound" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="love"
            android:text="love" />

        <Button
            android:onClick="playvideo"
            android:text="playvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:text="自动布局"
            android:background="@android:drawable/btn_default"
            android:onClick="wrapLayout"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:onClick="blur"
            android:text="blur"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:onClick="night"
            android:text="night"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_width="wrap_content"
            android:textOff="off"
            android:textOn="on"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>
